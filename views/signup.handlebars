<form class="container border border-secondary rounded-lg p-5">
    
    <!-- Title -->
    <div class="col text-center pb-3">
        <h1>Family Memories</h1>
    </div>

    <br>

    <!-- Input new username -->
    <div class="form-group">
        <label for="inputUsername" class="font-weight-bold">Username:</label>
        <input type="username" class="form-control border border-secondary" id="inputUsername">
    </div>

    <!-- Input new password -->
    <div class="form-group">
        <label for="inputPassword" class="font-weight-bold">Password:</label>
        <input type="password" class="form-control border border-secondary" id="inputPassword">
    </div>

    <!-- Sign up button -->
    <div class="col text-center pt-3">
        <button type="submit" class="btn btn-primary p-2 pr-3 pl-3" id="signup-button">Sign Up</button>
    </div>
</form>