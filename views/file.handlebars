<div class="container w-75 mt-5">

    {{log cleanFileInfo}}

    <!-- Embedded video card -->
    <div class="card">
        <div class="card-title mt-3 pl-3">
            <h3>{{cleanFileInfo.name}}</h3>
        </div>
        <div class="embed-responsive embed-responsive-16by9">
            <iframe src="{{cleanFileInfo.url}}" allow="autoplay"></iframe>
        </div>
        <p class="p-3">{{cleanFileInfo.description}}</p>
    </div>

    <br>

    <h3 class="comments-title text-center">Comments</h3>

    <hr>

    {{#each cleanFileInfo.comments as |comment| }}
        <!-- Existing file comments -->
        <div class="be-comment mb-3">
            <div class="be-comment-content" style="display: block; background: #f6f6f7; border: 1px solid #edeff2; padding: 15px 20px 20px 20px;">
                <span style="display: inline-block; width: 49%; margin-bottom: 15px;">
                    <h5>User Id: {{comment.user_id}}</h5>
                </span>
                <span
                    style="text-align: right; font-size: 11px; color: #b4b7c1; display: inline-block; width: 49%; margin-bottom: 15px;">
                    <i class="fa fa-clock-o"></i>
                    {{comment.createdAt}}
                </span>
                <p
                    style="font-size: 13px; line-height: 18px; color: #7a8192; display: block;">
                    {{comment.text}}
                </p>
            </div>
        </div>
    {{/each}}

    <hr>

    <!-- New file comment submission form -->
    <form>
        <div class="form-group mt-3">
            <label for="inputComment">Leave a Comment!</label>
            <input type="text" class="form-control" placeholder="Message" id="comment-text">
        </div>
        <button type="submit" class="btn btn-primary" id="comment-button" data-id="{{cleanFileInfo.id}}">Submit</button>
    </form>

    <br>
</div>

<script src="/js/comment.js"></script>